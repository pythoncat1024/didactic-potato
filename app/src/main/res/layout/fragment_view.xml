<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ViewFragment">

    <com.python.cat.potato.view.measure.ItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_drawable"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="0dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/add_calendar_event"
            android:visibility="visible" />

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/button_item_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_name"
            android:textColor="@color/item_selector" />

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/button_item_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/action_settings"
            android:textColor="@color/item_selector" />

    </com.python.cat.potato.view.measure.ItemLayout>

</FrameLayout>